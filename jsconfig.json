{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "layouts/*": ["layouts/*"],
      "redux/*": ["redux/*"],
      "routes/*": ["routes/*"],
      "saga/*": ["saga/*"],
      "views/*": ["views/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}